{
  "name": "server",
  "version": "1.0.0",
  "description": "Sinecta Quotes",
  "keywords": [
    "sinecta",
    "backend",
    "fullstack"
  ],
  "license": "ISC",
  "author": "victor.barreratoledo@gmail.com",
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "dev": "nodemon",
    "build": "npm run tsoa:routes && npm run tsoa:spec && tsc -P tsconfig.json ",
    "start": "ts-node ./src/main.ts",
    "tsoa:routes": "tsoa routes",
    "tsoa:spec": "tsoa spec",
    "prisma:gen": "prisma generate",
    "migrate:dev": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "seed": "ts-node prisma/seed.ts",
    "test": "jest --runInBand",
    "test:unit": "jest --runInBand src/tests/unit",
    "test:integration": "jest --runInBand src/tests/integration",
    "lint": "eslint . --ext .ts",
    "swagger": "tsoa spec-and-routes  && tsoa swagger",
    "generate-client": "openapi -i ./docs/swagger.json -o ./openapi-client --client axios --name quotingsystem --exportSchemas true --request ./docs/request.ts"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.0",
    "@types/pdfkit": "^0.17.2",
    "@types/swagger-ui-express": "^4.1.8",
    "nodemon": "^3.1.10",
    "openapi-typescript-codegen": "^0.29.0",
    "prisma": "^6.14.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@prisma/client": "^6.14.0",
    "@turf/area": "^7.2.0",
    "ajv": "^8.17.1",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "csv-stringify": "^6.6.0",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "geojson": "^0.5.0",
    "helmet": "^8.1.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.7.1",
    "pdfkit": "^0.17.1",
    "pino": "^9.9.0",
    "pino-http": "^10.5.0",
    "reflect-metadata": "^0.2.2",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.6.0",
    "typescript-ioc": "^3.2.2",
    "zod": "^4.1.1"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node -P tsconfig.json src/main.ts"
  }
}
